<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="todolist.Views.RegisterPage"
             Title="Registracija">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label Text="Registracija" FontSize="20" HorizontalOptions="Center" />

            <Entry x:Name="DisplayNameEntry" Placeholder="Ime i prezime" />
            <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
            <Entry x:Name="PasswordEntry" Placeholder="Lozinka" IsPassword="True" />
            <Entry x:Name="ConfirmEntry" Placeholder="Ponovi lozinku" IsPassword="True" />

            <Button Text="Registriraj se" Clicked="OnRegisterClicked" />
            <Label x:Name="MessageLabel" TextColor="Red" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
