<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="todolist.Views.LoginPage"
             Title="Prijava">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">
            <Label Text="Prijava" FontSize="24" HorizontalOptions="Center" />

            <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
            <Entry x:Name="PasswordEntry" Placeholder="Lozinka" IsPassword="True" />

            <Button Text="Prijavi se" Clicked="OnLoginClicked" />
            <Button Text="Idi na registraciju" Clicked="OnRegisterClicked" />

            <Label x:Name="MessageLabel" TextColor="Red" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
